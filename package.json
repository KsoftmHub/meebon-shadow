{
  "name": "my-microservices",
  "version": "1.0.0",
  "description": "Microservice project with pnpm",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "start:dev": "concurrently 'pnpm run dev --filter @my-microservices/user-service' 'pnpm run dev --filter @my-microservices/reminder-service' 'pnpm run dev --filter @my-microservices/product-service'",
    "db:migrate": "pnpm -r db:migrate",
    "db:generate": "pnpm -r db:generate",
    "semantic-release": "semantic-release",
    "verify-conditions": "semantic-release verifyConditions",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^10.0.6",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/node": "^20.17.17",
    "chalk": "^4.1.2",
    "commander": "^9.5.0",
    "concurrently": "^7.6.0",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.3",
    "inquirer": "^8.2.6",
    "nodemon": "^3.1.9",
    "semantic-release": "^21.1.2",
    "ts-node": "^10.9.2",
    "tsc": "^2.0.4",
    "typescript": "^5.7.3"
  },
  "bin": {
    "microservice-cli": "bin/microservice-cli.js"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}