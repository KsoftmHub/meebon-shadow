{
  "name": "@meebon/meebon-shadow",
  "version": "1.0.0",
  "description": "Microservice project with pnpm",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "nodemon",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "route": "tsx ./bin/routes.cli.ts",
    "start:dev": "concurrently 'pnpm run dev --filter @meebon/user-service' 'pnpm run dev --filter @meebon/reminder-service' 'pnpm run dev --filter @meebon/product-service'",
    "semantic-release": "semantic-release",
    "verify-conditions": "semantic-release verifyConditions",
    "prepare": "husky",
    "start": "node --loader ts-node/esm src/index.ts",
    "typeorm": "pnpm tsx ./node_modules/typeorm/cli.js",
    "clean:cache": "pnpm run typeorm cache:clear",
    "db:drop": "pnpm run typeorm schema:drop -d src/sources/migration-source.ts",
    "db:migrate": "pnpm run typeorm migration:run -d src/sources/migration-source.ts",
    "mg": "pnpm run typeorm migration:generate -d src/sources/migration-source.ts",
    "mc": "pnpm run typeorm migration:create",
    "sc": "pnpm run typeorm subscriber:create"
  },
  "dependencies": {
    "@meebon/meebon-crypto": "^1.3.0",
    "class-validator": "^0.14.1",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "js-convert-case": "^4.2.0",
    "multer": "1.4.5-lts.1",
    "mysql": "^2.14.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.10.4",
    "typedi": "^0.10.0",
    "typeorm": "0.3.20",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^10.0.6",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/inquirer": "^9.0.7",
    "@types/inquirer-autocomplete-prompt": "^3.0.3",
    "@types/node": "^20.17.17",
    "chalk": "^4.1.2",
    "concurrently": "^7.6.0",
    "express-list-routes": "^1.2.4",
    "husky": "^8.0.3",
    "inquirer": "^8.2.6",
    "inquirer-autocomplete-prompt": "^3.0.1",
    "nodemon": "^3.1.9",
    "semantic-release": "^21.1.2",
    "ts-node": "10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "bin": {
    "microservice-cli": "bin/microservice-cli.js"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
