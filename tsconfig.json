{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": false,
    "declarationMap": false,
    "tsBuildInfoFile": ".tsbuildinfo",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "checkJs": true,
    "rootDir": ".",
    "outDir": "./dist",
    "paths": {
      "@meebon/lib/*": [
        "./src/*"
      ],
      "@meebon/packages/*": [
        "./packages/*"
      ]
    }
  },
  "include": [
    "src",
    "packages"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "tests",
    "ecosystem.config.js",
    "example",
    "sample",
    "**/*.test.ts",
    "**/setupTests.ts",
    "**/__mocks__/*",
    "**/dist/*",
    "**/build/*"
  ]
}