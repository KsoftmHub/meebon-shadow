{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@packages/*": [
        "./packages/*"
      ],
      "@lib/*": [
        "./src/*"
      ],
      "@template/*": [
        "./templates/*"
      ]
    },
    "lib": [
      "es2021",
      "DOM"
    ],
    "target": "es2021",
    "module": "es2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "configs/**/*",
    "packages/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}